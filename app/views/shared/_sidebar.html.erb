<div id="sidebar" class="p-3">
  <h6><i class="fa-regular fa-comments"></i> Zoey</h6>

  <hr>

  <p class="mb-1">
    <i class="fa-regular fa-comment-dots"></i>
    <span> 1:1s</span>
    <% unless current_user.checkins.last && current_user.checkins.last.created_at > 4.days.ago %>
     <span>- <%= link_to 'prepare', new_checkin_path %></span>
    <% end %>
  </p>

  <% if current_user.managers.any? %>


    <p class="mb-1">Manager</p>
    <ul>
      <% current_user.manager_relationships.each do |relationship| %>
        <li>
          <%= link_to relationship.manager.name, relationship_path(relationship) %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% if current_user.direct_reports.any? %>
    <p class="mb-1">Direct reports (<%= current_user.direct_reports.count %>)</p>
    <ul>
      <% current_user.direct_report_relationships.each do |relationship| %>
        <li><%= link_to relationship.direct_report.name, relationship_path(relationship) %></li>
      <% end %>
    </ul>
  <% end %>

  <%= link_to '+ Add 1:1', new_relationship_path %>

  <hr>

  <%= link_to root_path do %>
    <i class="fa-solid fa-sliders"></i> Settings
  <% end %>

  <hr>

  <p class="mb-0"><%= current_user.name %> - <%= link_to 'logout', destroy_user_session_path, 'data-turbo-method': :delete %></p>
</div>

