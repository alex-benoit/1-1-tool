<li class="list-group-item d-flex justify-content-between align-items-center" id="<%= dom_id(topic) %>">
  <%= form_with model: [topic.relationship, topic], class: 'd-flex align-items-center flex-grow-1' do |f| %>
    <%= f.check_box :completed, checked: topic.completed_at?, class: 'form-check-input me-2 mt-0', style: 'flex: none', data: { controller: "topic", action: "topic#submit" } %>
    <span>
      <%= topic.title %>
    </span>
  <% end %>
  <span class="badge bg-primary me-2"><%= topic.ai_suggested? ? 'ðŸ¤– Suggested by AI' : topic.author.name %></span>
  <%= button_to relationship_topic_path(topic.relationship, topic), method: :delete, class: 'btn btn-outline-secondary btn-sm', form: { data: { turbo_confirm: "Are you sure?" } } do %>
    <i class="fa-regular fa-trash-can"></i>
  <% end %>
</li>
